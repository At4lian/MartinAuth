NODE_ENV=development
DATABASE_URL="postgresql://user:password@localhost:5432/martin-auth"
AUTH_SECRET="please-change-me-and-use-at-least-32-characters"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email provider configuration (required for transactional emails)
RESEND_API_KEY=""
RESEND_FROM_EMAIL="Auth Team <no-reply@example.com>"

# Optional OAuth providers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Optional absolute URLs allowed for redirects (comma separated)
AUTH_REDIRECT_ALLOWLIST=""

# Security tuning
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW=60
AUTH_LOCKOUT_THRESHOLD=5
AUTH_LOCKOUT_DURATION=900
